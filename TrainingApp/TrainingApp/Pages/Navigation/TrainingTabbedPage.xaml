<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage Padding="20"
            xmlns:local="clr-namespace:TrainingApp.Pages"
            xmlns:nav="clr-namespace:TrainingApp.Pages.Navigation"
            xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="TrainingApp.Pages.Navigation.TrainingTabbedPage">
    <!--Pages can be added as references or inline-->
    <ContentPage Title="Tab 1">
        <Label Text="Tab 1 text" HorizontalOptions="Center" VerticalOptions="Center"/>
    </ContentPage>
    <NavigationPage Title="Tab 2">
        <x:Arguments>
            <nav:ContactsPage Title="Contacts"/>
        </x:Arguments>
    </NavigationPage>
    <local:ContactListPage Title="Contacts"/>
</TabbedPage>