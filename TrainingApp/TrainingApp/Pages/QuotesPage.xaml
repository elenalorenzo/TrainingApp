<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Padding="20"  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp.Pages.QuotesPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    Android="20, 30, 20, 20"
                    iOS="0, 30, 0, 0">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout x:Name="test">
        <BoxView Color="Green" Opacity="{Binding 
            Source={x:Reference slider}, 
			Path=Value}"/>
        <Button Text="Next" Clicked="Handle_Clicked" />
        <Label BindingContext="{x:Reference slider}"
            Text="{Binding Value, StringFormat='Font Size: {0:N0}'}" 
            Opacity="{Binding Value}"/>
        <Slider 
            x:Name="slider" 
            Maximum="50" 
            Minimum="16" />
        <Label 
            x:Name="currentQuote" 
            FontSize="{Binding 
			Source={x:Reference slider}, 
			Path=Value}" />
    </StackLayout>
</ContentPage>